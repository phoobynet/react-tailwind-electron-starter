{
  "name": "react-tailwind-electron-starter",
  "private": true,
  "version": "0.0.0",
  "main": "build/main/main.js",
  "scripts": {
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "dev": "npm run main:build-ts && concurrently \"npm run renderer:dev\" \"npm run main:watch\" \"npm run main:nodemon\"",
    "renderer:dev": "vite",
    "renderer:build": "vue-tsc -p ./renderer/tsconfig.json --noEmit && vite build",
    "renderer:serve": "vite preview",
    "main:nodemon": "NODE_ENV=development nodemon --watch build/main --exec 'electron .'",
    "main:watch": "npm-watch",
    "main:build-ts": "tsc --project main/tsconfig.json",
    "main:start": "electron-forge start",
    "main:package": "electron-forge package",
    "main:make": "npm run renderer:build && npm run main:build-ts && electron-forge make",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "prepare": "husky install"
  },
  "watch": {
    "main:build-ts": {
      "patterns": [
        "main"
      ],
      "extensions": "ts,js",
      "quiet": false,
      "runOnChangeOnly": true
    }
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "date-fns": "^2.29.1",
    "electron-context-menu": "^3.3.0",
    "electron-squirrel-startup": "^1.0.0",
    "lodash": "^4.17.15",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.4.0",
    "react-router-dom": "^6.3.0",
    "react-use": "^17.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@electron-forge/cli": "^6.0.0-beta.65",
    "@electron-forge/maker-deb": "^6.0.0-beta.65",
    "@electron-forge/maker-rpm": "^6.0.0-beta.65",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.65",
    "@electron-forge/maker-zip": "^6.0.0-beta.65",
    "@storybook/addon-actions": "^6.5.10",
    "@storybook/addon-essentials": "^6.5.10",
    "@storybook/addon-interactions": "^6.5.10",
    "@storybook/addon-links": "^6.5.10",
    "@storybook/builder-vite": "^0.2.2",
    "@storybook/react": "^6.5.10",
    "@storybook/testing-library": "^0.0.13",
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "@tsconfig/node16": "^1.0.3",
    "@types/lodash": "^4.14.182",
    "@types/node": "^16.11.47",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "@vitejs/plugin-react": "^2.0.0",
    "autoprefixer": "^10.4.8",
    "babel-loader": "^8.2.5",
    "concurrently": "^7.3.0",
    "electron": "^20.0.2",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.6.4",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "npm-watch": "^0.11.0",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.6.4",
    "vite": "^3.0.0",
    "vite-tsconfig-paths": "^3.5.0"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "react_tailwind_electron_starter"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
