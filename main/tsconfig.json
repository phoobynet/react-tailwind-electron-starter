{
  "extends": "@tsconfig/node16",
  "compilerOptions": {
    "outDir": "../build/main",
    "rootDir": ".",
    "target": "ESNext",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@main/*": ["./*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.js"],
  "references": [
    {
      "path": "../shared"
    }
  ]
}
